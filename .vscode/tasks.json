{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Transpile JavaScript",
      "type": "shell",
      "command": "npm run build --silent",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "shared",
        "reveal": "silent"
      },
      "problemMatcher": ["$eslint-stylish", "$tsc"]
    },
    {
      "label": "Transpile JavaScript without linting",
      "type": "shell",
      "command": "npm run build-only --silent",
      "group": "build",
      "presentation": {
        "panel": "shared",
        "reveal": "silent"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Lint project",
      "type": "shell",
      "command": "npm run lint --silent",
      "group": "none",
      "presentation": {
        "panel": "shared",
        "reveal": "silent"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Run JavaScript code using ts-node",
      "type": "shell",
      "command": "npm run start:js --silent",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "Run generated JavaScript code using node",
      "type": "shell",
      "command": "npm run start:js-transpiled --silent",
      "group": "none",
      "presentation": {
        "panel": "dedicated",
        "reveal": "always"
      },
      "problemMatcher": []
    }
  ]
}
